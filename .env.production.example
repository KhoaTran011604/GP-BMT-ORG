# ===========================================
# GPBMT.ORG - Production Environment
# ===========================================
# QUAN TRONG: Thay doi tat ca cac gia tri truoc khi deploy!

# -------------------------------------------
# DATABASE - MongoDB Atlas
# -------------------------------------------
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DB=gpbmt_production

# -------------------------------------------
# AUTHENTICATION - JWT
# -------------------------------------------
# QUAN TRONG: Tao key ngau nhien it nhat 64 ky tu
JWT_SECRET=generate-strong-random-string-min-64-characters-for-production

# -------------------------------------------
# AWS S3 - File Storage
# -------------------------------------------
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=ap-southeast-1
AWS_S3_BUCKET=gpbmt-production

# -------------------------------------------
# APPLICATION
# -------------------------------------------
NEXT_PUBLIC_APP_URL=https://gpbmt.org
NEXT_PUBLIC_APP_NAME=GPBMT.ORG
NODE_ENV=production

# -------------------------------------------
# EMAIL - SMTP
# -------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@gpbmt.org
SMTP_PASS=app-password-here
EMAIL_FROM=GPBMT <noreply@gpbmt.org>

# -------------------------------------------
# REDIS - Caching & Sessions
# -------------------------------------------
REDIS_URL=redis://username:password@redis-host:6379
